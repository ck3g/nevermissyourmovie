.col-sm-6{ id: dom_id(movie) }
  .tile
    .media
      %a.pull-left{:href => "#", :target => "_parent"}
        -# %img.img-responsive{:alt => "image", width: '140px'}/
        .clearfix.visible-sm
        .media-body
          %a{:href => "#", :target => "_parent"}
          %h4.media-heading
            = link_to movie.title, movie
            %small.pull-right= l(3.days.from_now, format: :short)
          %ul.list-inline
            %li Current season
            %li Next episode
          %p.hidden-xs
            Situated between fairmount
            park and the prestigious philadelphia cricket
            club, this beautiful 2+ acre property is truly
            \...
          %p.actions
            .row
              .col-sm-12.col-xs-12.col-md-12
                .col-md-5.col-sm-12.col-xs-12
                  - if current_user.watching?(movie)
                    = link_to t('movie.actions.stop_watching'), stop_watching_movie_path(movie), method: :delete
                  - else
                    = link_to t('movie.actions.to_watch_list'), watch_movie_path(movie), method: :post
                - if can? :edit, movie
                  .col-md-3.col-sm-12.col-xs-12= link_to t('movie.actions.edit'), edit_movie_path(movie)
                  .col-md-4.col-sm-12.col-xs-12
                    = link_to t('movie.actions.delete'), movie, method: :delete, data: { confirm: t(:are_you_sure) }
