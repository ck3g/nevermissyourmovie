.panel-body
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-signin' }, defaults: { input_html: { class: 'form-control' }, label: false }) do |f|
    %fieldset
      %label.panel-login
        .login_result
          = f.error_notification
          = f.input :reset_password_token, as: :hidden
          = f.full_error :reset_password_token
      = f.input :password, placeholder: "New password", required: true, autofocus: true
      = f.input :password_confirmation, placeholder: "Confirm your new password", required: true
      %br
      = f.button :submit, "Change my password", class: 'btn btn-lg btn-success btn-block'
      = render "devise/shared/links"
