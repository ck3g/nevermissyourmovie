.panel-body
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f|
    %fieldset
      %label.panel-login
        .login_result
          = f.error_notification
      = f.input :email, label: false, required: true, autofocus: true, input_html: { class: 'form-control' }, placeholder: 'Email'
      %br
      = f.button :submit, "Send me reset password instructions", class: 'btn btn-lg btn-success btn-block'
      = render "devise/shared/links"
