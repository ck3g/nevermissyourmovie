.panel-body
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }, defaults: { input_html: { class: 'form-control' }, label: false }) do |f|
    %fieldset
      %label.panel-login
        .login_result
          = f.error_notification
    = f.input :email, required: true, autofocus: true, placeholder: 'Email'
    = f.input :password, required: true, placeholder: 'Password'
    = f.input :password_confirmation, quired: true, placeholder: 'Password Confirmation'
    %br/
    = f.button :submit, "Sign up", class: 'btn btn-lg btn-success btn-block'
    = render "devise/shared/links"
